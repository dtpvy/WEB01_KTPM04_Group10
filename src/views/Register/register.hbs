<div class='w-75 mx-auto pt-5'>
  {{> social_login}}
  <div style='text-align:center; font-size:20px; padding: 16px'>Hoặc</div>
  <h1 class='login__header'>ĐĂNG KÝ</h1>   
  <form class="Login-form"> 
    <div>
      <label class="labelForm" for="uname"><b>Tài Khoản:</b></label>
      <input id="username" type="text" placeholder="Tên tài khoản" name="uname" required>

      <label for="psw"><b>Mật khẩu:</b></label>
      <input id="password" type="password" placeholder="Mật khẩu" name="psw" required>
          
      <label for="phone"><b>Số điện thoại:</b></label>
      <input id="password" type="number" placeholder="Số điện thoại" name="phone" required>
      <div class="btn-Submit-Login">
        <button onclick="onNavigateTo('/')" id="login-btn"type="submit">Đăng Ký</button>
      </div>
    </div>
 
    <div class="You-Know-To-Web">
      <i>Bạn đã có tài khoản?</i>
      <a href="login">Đăng nhập</a>
    </div>
  </form>
</div>
