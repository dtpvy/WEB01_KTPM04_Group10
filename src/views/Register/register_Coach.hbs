<div class='w-75 mx-auto pt-5'>
  <h1 class='login__header fs-1'>ĐĂNG KÝ NHÀ XE</h1>
  <form method='post'>
    <div>
      <label for='email'><b>Mã nhà xe:</b></label>
      <input
        id='email'
        class='form-control w-100'
        type='text'
        placeholder='Mã nhà xe'
        name='code'
        value='{{code}}'
        required
      />
      <label for='password'><b>Tên nhà xe:</b></label>
      <input
        id='password'
        class='form-control w-100'
        type='text'
        placeholder='Tên nhà xe'
        name='name'
        value='{{name}}'
        required
      />

      <label for='password'><b>Mật khẩu:</b></label>
      <input
        id='password'
        class='form-control w-100'
        type='password'
        placeholder='Mật khẩu'
        name='password'
        value='{{password}}'
        required
      />
      <label for='password'><b>Xác nhận mật khẩu:</b></label>
      <input
        id='password'
        class='form-control w-100'
        type='password'
        placeholder='Xác nhận mật khẩu'
        name='repassword'
        required
      />
      {{#if error}}
        <div class='text-danger text-center mb-3'>
          {{error}}
        </div>
      {{/if}}
      <div class='btn-Submit-Login'>
        <button id='login-btn' type='submit'>Đăng ký</button>
      </div>
    </div>
    <div class='You-Know-To-Web'>
      <i>Bạn đã có tài khoản?</i>
      <a href='../login/coach'>Đăng nhập</a>
    </div>
  </form>
</div>